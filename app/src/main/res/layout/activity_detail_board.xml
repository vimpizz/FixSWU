<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/SWUPURPLE">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="상세보기"
            android:gravity="center|left"
            android:fontFamily="@font/kopubdotumbold"
            android:textColor="#FFFFFF"/>

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/kopubdotumbold"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="학번"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtStuNumDetail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:ems="10"
                android:fontFamily="@font/kopubdotumbold"
                android:gravity="center|left" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/kopubdotumbold"
                android:gravity="center|left"
                android:text="이름"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtNameDetail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:ems="10"
                android:fontFamily="@font/kopubdotumbold"
                android:gravity="center|left"
                android:maxLines="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/kopubdotumbold"
                android:gravity="center|left"
                android:text="기관"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/txtHouseDetail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:fontFamily="@font/kopubdotumbold"
                android:gravity="center|left" />

            <!-- <TextView
                android:id="@+id/txtRoomNumDetail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:fontFamily="@font/kopubdotumbold"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txtDeskNumDetail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/kopubdotumbold"
                android:layout_weight="8"
                android:ems="10"
                android:maxLines="1"
                android:gravity="center|left"/>-->

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/kopubdotumbold"
                android:gravity="center|left"
                android:text="날짜"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtDateDetail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:ems="10"
                android:fontFamily="@font/kopubdotumbold"
                android:gravity="center|left"
                android:inputType="textPersonName"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/kopubdotumbold"
                android:gravity="center|left"
                android:text="상태"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtConditionDetail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:ems="10"
                android:fontFamily="@font/kopubdotumbold"
                android:gravity="center|left"
                android:maxLines="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/kopubdotumbold"
            android:gravity="center|left"
            android:text="사진"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imgWriteDetail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:scaleType="fitCenter"
            android:src="@drawable/heart" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/kopubdotumbold"
            android:gravity="left"
            android:text="수리내용"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtContentDetail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/square_box"
            android:fontFamily="@font/kopubdotumbold"
            android:gravity="center|left"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:paddingLeft="10dp"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/kopubdotumbold"
            android:gravity="center|left"
            android:text="기사님
            코멘트"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtCommentDetail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@drawable/square_box"
            android:fontFamily="@font/kopubdotumbold"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnLike"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|center_vertical"
                android:background="@drawable/heart"
                android:gravity="center_vertical"
                android:padding="10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        >

        <Button
            android:id="@+id/btnCancelDetail"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:text="뒤로가기"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/kopubdotumbold"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/btnDel"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:text="삭제하기"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/kopubdotumbold"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/btnModify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정하기"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/kopubdotumbold"
            android:background="@drawable/button_background"/>

    </LinearLayout>
</LinearLayout>