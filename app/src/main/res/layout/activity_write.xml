<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WriteActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/SWUPURPLE">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="영선신청하기"
            android:fontFamily="@font/kopubdotummedium"
            android:gravity="center|left"/>



    </androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/kopubdotummedium"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="학번"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edtStuNum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:ems="10"
                android:fontFamily="@font/kopubdotummedium"
                android:hint="학번"
                android:textSize="15dp"
                android:gravity="center|left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/kopubdotummedium"
                android:gravity="center|left"
                android:text="이름"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:ems="10"
                android:fontFamily="@font/kopubdotummedium"
                android:hint="이름"
                android:maxLines="1"
                android:textSize="15dp"
                android:gravity="center|left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/kopubdotummedium"
                android:gravity="center|left"
                android:text="기관"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/spinnerHouse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:entries="@array/기관"
                android:gravity="center|left"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/kopubdotummedium"
                android:gravity="center|left"
                android:text="호수"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edtRoomNum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:ems="10"
                android:fontFamily="@font/kopubdotummedium"
                android:hint="호수"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textSize="15dp"
                android:gravity="center|left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/kopubdotummedium"
                android:gravity="center|left"
                android:text="번호"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edtDeskNum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:ems="10"
                android:fontFamily="@font/kopubdotummedium"
                android:hint="번호"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textSize="15dp"
                android:gravity="center|left"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgWrite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/picture_box"
            tools:srcCompat="@drawable/picture_box" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/btnCamera"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:fontFamily="@font/kopubdotummedium"
                android:text="사진찍기"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnGallery"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:fontFamily="@font/kopubdotummedium"
                android:text="사진선택"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/kopubdotummedium"
            android:gravity="center|left"
            android:text="수리내용"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edtContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:fontFamily="@font/kopubdotummedium"
            android:hint="구체적으로 적어주세요."
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:text=""
            android:textSize="15dp"
            android:gravity="center|left"
            android:background="@drawable/picture_box"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btnStuCancel"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/kopubdotummedium"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/btnStuSave"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/kopubdotummedium"
            android:background="@drawable/button_background"/>

    </LinearLayout>
</LinearLayout>