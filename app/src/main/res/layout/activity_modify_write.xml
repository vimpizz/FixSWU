<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/SWUPURPLE">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="영선신청 수정하기"
            android:gravity="center|left"
            android:textColor="#FFFFFF"/>



    </androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="2"
                android:text="학번"
                android:textSize="15dp"
                android:maxLines="1"/>

            <EditText
                android:id="@+id/edtStuNumModify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:ems="10"
                android:hint="학번"
                android:gravity="center|left"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="2"
                android:text="이름"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/edtNameModify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:ems="10"
                android:hint="이름"
                android:maxLines="1"
                android:gravity="center|left"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="기관"
                android:textSize="15dp"
                android:gravity="center|left"/>

            <Spinner
                android:id="@+id/spinnerHouseModify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:entries="@array/기관"
                android:gravity="center|left"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="호수"
                android:gravity="center|left"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/edtRoomNumModify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="호수"
                android:maxLines="1"
                android:gravity="center|left"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_weight="2"
                android:text="번호"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/edtDeskNumModify"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="번호"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:gravity="center|left"
                android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imgWriteModify"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/picture_box"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/btnCameraModify"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:text="사진찍기"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_background"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/btnGalleryModify"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="사진선택"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_background"
                android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center|top"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="수리내용"
            android:textSize="15dp"
            android:gravity="left"/>

        <EditText
            android:id="@+id/edtContentModify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:hint="구체적으로 적어주세요."
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:text=""
            android:textSize="15dp"
            android:gravity="center|left"
            android:background="@drawable/picture_box"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btnStuCancelModify"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/btnStuSaveModify"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"/>

    </LinearLayout>
</LinearLayout>