<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/applyBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/picture_box"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtvNum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center|left"
                android:text="번호"
                android:textStyle="bold"
                android:fontFamily="@font/kopubdotumbold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/txtvCondition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center|right"
                android:text="상태"
                android:fontFamily="@font/kopubdotumbold"
                android:textSize="15dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtvContents"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center|left"
            android:lines="2"
            android:maxLines="2"
            android:text="내용"
            android:fontFamily="@font/kopubdotumbold"
            android:textSize="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtvHouse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/kopubdotumbold"
                android:gravity="center|left"
                android:text="기관"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtvRoom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/kopubdotumbold"
                android:gravity="center|left"
                android:layout_weight="1"
                android:textSize="15dp"
                android:text="방" />

            <TextView
                android:id="@+id/txtvDesk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/kopubdotumbold"
                android:gravity="center|left"
                android:layout_weight="1"
                android:textSize="15dp"
                android:text="번호" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtvDate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:fontFamily="@font/kopubdotumbold"
            android:text="신청날짜,시간"
            android:textSize="15dp"/>

    </LinearLayout>
</LinearLayout>